{
    "compilerOptions": {
      // project options
      "lib": [
        "ESNext",
        "DOM"
      ],
      "removeComments": true,
      "target": "ES6",
  
      // Module resolution
      "baseUrl": "./", 
      "esModuleInterop": true,
      "moduleResolution": "node",
      "paths": {},
  
      // Source Map
      "sourceMap": false,
  
      // Strict Checks
      "alwaysStrict": true,
      "allowUnreachableCode": false,
      "noImplicitAny": true, 
      "strictNullChecks": true,
  
      // Linter Checks
      "noImplicitReturns": true,
      "noUncheckedIndexedAccess": true,
      "noUnusedLocals": true, 
      "noUnusedParameters": true 
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*"
    ]
  }